# Configurações da aplicação
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Configurações do MongoDB
MONGODB_URI=mongodb://localhost:27017/tw_system
MONGODB_TEST_URI=mongodb://localhost:27017/tw_system_test

# Configurações JWT
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-at-least-32-characters-long
JWT_REFRESH_EXPIRE=30d

# Configurações CORS (separadas por vírgula)
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000,http://127.0.0.1:4200

# Configurações de email (opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=TW-System

# Configurações de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configurações de upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Configurações de segurança
BCRYPT_ROUNDS=12

# URLs do frontend
FRONTEND_URL=http://localhost:4200